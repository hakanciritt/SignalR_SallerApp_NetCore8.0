@using SignalR_App.WebUI.Areas.Admin.Models.Products
@model List<ProductViewModel>

@section Scripts {

    <script src="~/js/admin/products/Index.js" asp-append-version="true"></script>

}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürünler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="text-right mb-3">
                            <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Product" asp-action="CreateOrUpdate">Ekle</a>
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Ürün Adı</th>
                                    <th scope="col">Kategori Adı</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Oluşturulma Tarihi</th>
                                    <th scope="col">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Category?.Name</td>
                                        <td>@item.Status</td>
                                        <td>@item.CreatedDate.ToShortDateString()</td>
                                        <td>
                                            <a href="#" class="btn btn-outline-danger" data-id="@item.Id">Sil</a>
                                            <a asp-area="Admin" asp-controller="Product" asp-action="CreateOrUpdate" asp-route-productId="@item.Id" class="btn btn-outline-success" >Güncelle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

